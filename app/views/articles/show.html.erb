<div class="text-center" style="background-color: #bdbdbd;">
  <h1 style=""> Articles</h1>
  <b class="pull-right mt-n5 mr-3"><%= link_to 'New Article', new_article_path %></b>
</div>

<div class="d-flex justify-content-center mt-5">
  <div class="row">
    <div class="col-md-12">
      <article>
        <h2>
          <%= @article.title %>
          <%= link_to "", edit_article_path(@article), class: "fa fa-pencil" %>
          <%= link_to "", article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "fa fa-trash" %>
        </h2>
        <hr>
        <%= @article.content %>
      </article>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center mt-5">
  <%= link_to 'Back', articles_path, class: "btn btn-secondary" %>
</div>
